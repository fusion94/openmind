<% content_for :head do -%>
    <%= theme_stylesheet_link_tag 'sideBarRight' %>
    <%= javascript_include_tag "tablecloth" %>
<% end %>
<% content_for :bodyTag do -%>
    <%= set_focus_to_id 'user_email' -%>
<% end %>

<%= render :partial => "tab_menu" %>
<div id="tabBody" style="position:relative; padding-top:15px;">
  <h3>Customer Products</h3>
  <table>
    <tr>
      <th>
        Customer Name
      </th>
      <th>
        Location
      </th>
      <th>
        Serial Number
      </th>
      <th>
        Product
      </th>
      <th>
        In Use
      </th>
      <th>
        Registered At
      </th>
      <th>
        Expires At
      </th>
      <th>
        Registered Version
      </th>
      <th>
        Versions Installed
      </th>
    </tr>
    <% if @customers.present? %>
        <%= render :partial => 'customer', :collection => @customers %>
    <% else %>
        <td colspan="9">
          No records found
        </td>
    <% end %>
  </table>
</div>
<% if false %>
    <h3>Entitlements</h3>
    <table>
      <tr>
        <th colspan="3">
          Entitlements
        </th>
        <th colspan="3">
          Incidents
        </th>
      </tr>
      <tr>
        <th>
          Annual Total
        </th>
        <th>
          Consumed
        </th>
        <th>
          Available
        </th>
        <th>
          Total Purchased
        </th>
        <th>
          Consumed
        </th>
        <th>
          Available
        </th>
      </tr>
      <% if @entitlements.present? %>
          <%= render :partial => 'entitlement', :collection => @entitlements %>
      <% else %>
          <td colspan="6">
            No records found
          </td>
      <% end %>
    </table>
<% end %>
